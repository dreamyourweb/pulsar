head
  title Meteor Dominoes

body
  h1 Meteor Dominoes
  {{>board}}

template(name="board")
  #board
    input.add-domino(value="Add domino", type="button")
    input.clear-dominoes(value="Clear dominos", type="button")
    div(style="clear:both")
    {{#each dominoes}}
      {{>domino}}
    {{/each}}

template(name="domino")
  .domino(class="orientation-{{orientation}}", style="left:{{pos_x}}px;top:{{pos_y}}px") 
    {{type}}

